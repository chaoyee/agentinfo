<div class="page header">
  <h3>Agents:<h3>
</div>
<div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Default Contact</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @agents.each do |agent| %>
        <tr>
          <td><%= link_to agent.full_name, agent_contacts_path(agent.id) %></td>
          <td><%= agent.default_contact %></td>
          <td><%= link_to 'Show', agent, class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Edit', edit_agent_path(agent), class: 'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Delete', agent, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  &nbsp;
  <%= link_to 'New Agent', new_agent_path, class: 'btn btn-primary btn-sm' %>
  </br>
  </br>
  </div>  
  Click agent's name to show all contacts.
</div> 
